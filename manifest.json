{
    "name": "Aegis",
    "version": "1.0",
    "description": "Primitive AdBlocker",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": ["webRequest", "webRequestBlocking", "http://*/", "https://*/"],
    "background": {
        "scripts": ["blocked_domains.js", "background.js"]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },

    "author": "Ashish Gokarnkar",
    "manifest_version": 2   
}